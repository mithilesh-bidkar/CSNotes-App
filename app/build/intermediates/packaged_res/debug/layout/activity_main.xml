<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:background="@color/teal_200"
        android:fontFamily="@font/amaranth_bold_italic"
        android:text="Wel-come"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="44sp"
        android:layout_marginStart="10dp"

        android:text="Select one of the following categories:"

        android:textColor="#009688"
        android:textSize="25sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/syllabus"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:text="@string/Syllabus"
        android:textStyle="bold"
        android:textAlignment="center"

        android:textSize="25sp"
        />


    <Button
        android:id="@+id/Notes"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:text="Notes"
        android:textStyle="bold"
        android:textAlignment="center"

        android:textSize="25sp"
   />


    <Button
        android:id="@+id/Assignments"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="212dp"
        android:layout_height="60dp"

        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:text="Assignments"
        android:textStyle="bold"

        android:textSize="25sp" />


    <Button
        android:id="@+id/Resources"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:textStyle="bold"

        android:text="Resources"
        android:textSize="25sp" />
</LinearLayout>