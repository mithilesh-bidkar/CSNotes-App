<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AssignmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="44sp"
        android:text="Select Assignment Number:"

        android:textColor="#009688"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/assignment1"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:text="Assignment no.1"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/assignment2"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:text="Assignment no.2"
        android:textSize="25sp"
        android:textStyle="bold" />


</androidx.appcompat.widget.LinearLayoutCompat>