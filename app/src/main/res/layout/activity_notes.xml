<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NotesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="44sp"
        android:layout_marginStart="10dp"

        android:background="#03FFFFFF"
        android:text="Select unit :"
        android:textColor="#009688"

        android:textSize="25sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/firstunit"
        style="@style/Widget.Material3.Button"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:textStyle="bold"
        android:text="UNIT 1: HTML"
        android:textSize="18sp" />

    <Button
        android:id="@+id/secondunit"
        style="@style/Widget.Material3.Button"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:textStyle="bold"
        android:text="UNIT 2: CSS"
        android:textSize="18sp" />

    <Button
        android:id="@+id/thirdunit"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:textStyle="bold"
        android:text="UNIT 3: JAVASCRIPT"
        android:textSize="18sp" />

    <Button
        android:id="@+id/fourthunit"
        style="@style/Widget.Material3.Button"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:textStyle="bold"
        android:text="UNIT 4: XML"
        android:textSize="18sp" />

    <Button

    android:id="@+id/fifthunit"
    style="@style/Widget.Material3.Button"
    android:layout_width="212dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="44sp"
        android:textStyle="bold"
    android:text="UNIT 5: PHP"
    android:textSize="18sp" />

</androidx.appcompat.widget.LinearLayoutCompat>